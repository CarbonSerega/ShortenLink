  },
  "homepage": "https://github.com/CarbonSerega/ShortenLink#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "jquery": "^3.5.1",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^1.5.3",
